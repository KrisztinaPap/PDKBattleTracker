@model IEnumerable<PDKBattleTracker.Models.Mission>

@{
    ViewData["Title"] = "Index";
}

<h1>Missions</h1>

<p>
    <a asp-area="" asp-controller="Game" asp-action="Index">Back </a>
    |
    <a asp-action="Create"> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MissionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MissionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MissionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MissionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MissionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
