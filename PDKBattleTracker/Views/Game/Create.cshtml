@model PDKBattleTracker.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Game</h1>

<div class="container-fluid">
    <form asp-action="Create">
        <h2>Game Information</h2>

        <div class="row">
            <div class="col-lg-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GameDate" class="control-label form-label"></label>
                    <input asp-for="GameDate" class="form-control" />
                    <span asp-validation-for="GameDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GameSystemId" class="control-label form-label">Game System</label>
                    <div>
                        <select id="GameSystemId" name="GameSystemId" asp-for="GameSystemId" asp-items="@(new SelectList(ViewBag.GameSystemList, "GameSystemId", "GameSystemName"))" class="form-control">
                            <option value="0">--- select game system ---</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="GameTypeId" class="control-label">Game Type</label>
                    <div>
                        <select id="GameTypeId" name="GameTypeId" asp-for="GameTypeId" asp-items="@(new SelectList(ViewBag.GameTypeList, "GameTypeId", "GameTypeName"))" class="form-control">
                            <option value="0">--- select game type ---</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="GameSizeId" class="control-label">Game Size</label>
                    <div>
                        <select id="GameSizeId" name="GameSizeId" asp-for="GameSizeId" asp-items="@(new SelectList(ViewBag.GameSizeList, "GameSizeId", "GameSizeName"))" class="form-control">
                            <option value="0">--- select game size ---</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MissionId" class="control-label">Game Mission</label>
                    <div>
                        <select id="MissionId" name="MissionId" asp-for="MissionId" asp-items="@(new SelectList(ViewBag.MissionList, "MissionId", "MissionName"))" class="form-control">
                            <option value="0">--- select game mission ---</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
       
        <div class="row">
            <div class="col-lg-6">

                <h2>Player 1 Information</h2>
                <div class="form-group">
                    <label asp-for="Player1Name" class="control-label">Name</label>
                    <div>
                        <select id="Player1Name" name="Player1Name" asp-for="Player1Name" asp-items="@(new SelectList(ViewBag.PlayerList, "PlayerName", "PlayerName"))" class="form-control">
                            <option value="0">--- select player 1 ---</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Player1Faction" class="control-label"></label>
                    <div>
                        <select id="Player1Faction" name="Player1Faction" asp-for="Player1Faction" asp-items="@(new SelectList(ViewBag.FactionList, "FactionName", "FactionName"))" class="form-control">
                            <option value="0">--- select faction ---</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Player1SubFaction" class="control-label">Subfaction</label>
                    <input asp-for="Player1SubFaction" class="form-control" />
                    <span asp-validation-for="Player1SubFaction" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Player1Custom1" class="control-label">Custom 1 (optional)</label>
                    <input asp-for="Player1Custom1" class="form-control" />
                    <span asp-validation-for="Player1Custom1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Player1Custom2" class="control-label">Custom 2 (optional)</label>
                    <input asp-for="Player1Custom2" class="form-control" />
                    <span asp-validation-for="Player1Custom2" class="text-danger"></span>
                </div>



                <div class="scoringArea">
                    <h3>Player 1 Primary</h3>
                    <div class="form-group row">
                        <label asp-for="Player1PrimaryRound2Points" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Player1PrimaryRound2Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player1PrimaryRound2Points" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Player1PrimaryRound3Points" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Player1PrimaryRound3Points" value="0" class="form-control" />
                        </div>
                            <span asp-validation-for="Player1PrimaryRound3Points" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Player1PrimaryRound4Points" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Player1PrimaryRound4Points" value="0" class="form-control" />
                        </div>  
                        <span asp-validation-for="Player1PrimaryRound4Points" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Player1PrimaryRound5Points" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Player1PrimaryRound5Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player1PrimaryRound5Points" class="text-danger"></span>
                    </div>

                    <h3>Player 1 Secondary</h3>
                    <div class="form-group row">
                        <div class="col-sm-8">
                            <label asp-for="Player1Secondary1text" class="control-label" hidden></label>
                            <input asp-for="Player1Secondary1text" class="form-control" value="Secondary #1 (optional)" />
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Player1Secondary1Points" class="control-label" hidden></label>
                            <input asp-for="Player1Secondary1Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player1Secondary1text" class="text-danger"></span>
                        <span asp-validation-for="Player1Secondary1Points" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8">
                            <label asp-for="Player1Secondary2" class="control-label" hidden></label>
                            <input asp-for="Player1Secondary2" class="form-control" value="Secondary #2 (optional)" />
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Player1Secondary2Points" class="control-label" hidden></label>
                            <input asp-for="Player1Secondary2Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player1Secondary2" class="text-danger"></span>
                        <span asp-validation-for="Player1Secondary2Points" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8">
                            <label asp-for="Player1Secondary3" class="control-label" hidden></label>
                            <input asp-for="Player1Secondary3" class="form-control" value="Secondary #3 (optional)" />
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Player1Secondary3Points" class="control-label" hidden></label>
                            <input asp-for="Player1Secondary3Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player1Secondary3" class="text-danger"></span>
                        <span asp-validation-for="Player1Secondary3Points" class="text-danger"></span>
                    </div>
                </div>


            </div>
            <div class="col-lg-6">
                <h2>Player 2 Information</h2>
                <div class="form-group">
                    <label asp-for="Player2Name" class="control-label">Name</label>
                    <div>
                        <select id="Player2Name" name="Player2Name" asp-for="Player2Name" asp-items="@(new SelectList(ViewBag.PlayerList, "PlayerName", "PlayerName"))" class="form-control">
                            <option value="0">--- select player 2 ---</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Player2Faction" class="control-label"></label>
                    <div>
                        <select id="Player2Faction" name="Player2Faction" asp-for="Player2Faction" asp-items="@(new SelectList(ViewBag.FactionList, "FactionName", "FactionName"))" class="form-control">
                            <option value="0">--- select faction ---</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Player2SubFaction" class="control-label">Subfaction</label>
                    <input asp-for="Player2SubFaction" class="form-control" />
                    <span asp-validation-for="Player2SubFaction" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Player2Custom1" class="control-label">Custom 1 (optional)</label>
                    <input asp-for="Player2Custom1" class="form-control" />
                    <span asp-validation-for="Player2Custom1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Player2Custom2" class="control-label">Custom 2 (optional)</label>
                    <input asp-for="Player2Custom2" class="form-control" />
                    <span asp-validation-for="Player2Custom2" class="text-danger"></span>
                </div>



                <div class="scoringArea">

                    <h3>Player 2 Primary</h3>
                    <div class="form-group row">
                        <label asp-for="Player2PrimaryRound2Points" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Player2PrimaryRound2Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player2PrimaryRound2Points" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Player2PrimaryRound3Points" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Player2PrimaryRound3Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player2PrimaryRound3Points" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Player2PrimaryRound4Points" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Player2PrimaryRound4Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player2PrimaryRound4Points" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Player2PrimaryRound5Points" class="col-sm-2 control-label"></label>
                        <div class="col-sm-2">
                            <input asp-for="Player2PrimaryRound5Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player2PrimaryRound5Points" class="text-danger"></span>
                    </div>

                    <h3>Player 2 Secondary</h3>

                    <div class="form-group row">
                        <div class="col-sm-8">
                            <label asp-for="Player2Secondary1text" class="control-label" hidden></label>
                            <input asp-for="Player2Secondary1text" class="form-control" value="Secondary #1 (optional)" />
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Player2Secondary1Points" class="control-label" hidden></label>
                            <input asp-for="Player2Secondary1Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player2Secondary1text" class="text-danger"></span>
                        <span asp-validation-for="Player2Secondary1Points" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8">
                            <label asp-for="Player2Secondary2" class="control-label" hidden></label>
                            <input asp-for="Player2Secondary2" class="form-control" value="Secondary #2 (optional)" />
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Player2Secondary2Points" class="control-label" hidden></label>
                            <input asp-for="Player2Secondary2Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player2Secondary2" class="text-danger"></span>
                        <span asp-validation-for="Player2Secondary2Points" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8">
                            <label asp-for="Player2Secondary3" class="control-label" hidden></label>
                            <input asp-for="Player2Secondary3" class="form-control" value="Secondary #3 (optional)" />
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Player2Secondary3Points" class="control-label" hidden></label>
                            <input asp-for="Player2Secondary3Points" value="0" class="form-control" />
                        </div>
                        <span asp-validation-for="Player2Secondary3" class="text-danger"></span>
                        <span asp-validation-for="Player2Secondary3Points" class="text-danger"></span>
                    </div>
                </div>

                <div>
                    <button id="scoringButton" class="btn btn-primary m-2" type="button">
                        Toggle Scoring Area
                    </button>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary m-2" />
                </div>
            </div>
        </div>
    </form>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
