@model PDKBattleTracker.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameDate" class="control-label"></label>
                <input asp-for="GameDate" class="form-control" />
                <span asp-validation-for="GameDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player1Name" class="control-label">Player 1</label>
                <select asp-for="Player1Name" class="form-control" asp-items="ViewBag.PlayerName">--- Select a Player ---</select>
            </div>
            <div class="form-group">
                <label asp-for="Player2Name" class="control-label">Player 2</label>
                <select asp-for="Player2Name" class="form-control" asp-items="ViewBag.PlayerName">--- Select a Player ---</select>
            </div>
            <div class="form-group">
                <label asp-for="Player1Faction" class="control-label">Player 1 Faction</label>
                <input asp-for="Player1Faction" class="form-control" />
                <span asp-validation-for="Player1Faction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player2Faction" class="control-label">Player 2 Faction</label>
                <input asp-for="Player2Faction" class="form-control" />
                <span asp-validation-for="Player2Faction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player1Score" class="control-label">Player 1 Score</label>
                <input asp-for="Player1Score" class="form-control" />
                <span asp-validation-for="Player1Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player2Score" class="control-label">Player 2 Score</label>
                <input asp-for="Player2Score" class="form-control" />
                <span asp-validation-for="Player2Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Winner" class="control-label">Winner</label>
                <select asp-for="Winner" class="form-control" asp-items="ViewBag.PlayerName">--- Select a Player ---</select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
